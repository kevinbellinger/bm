 <h1>Add a Bookmark!</h1>
 
 <div class="row">
   <div class="col-md-4">
     <p>Suggestions to help others!</p>
     <ul>
       <li>Pick a Relevant #Hashtag</li>
       <li>Keep it on topic!</li>
       <li>No Cat Links!</li>
     </ul>
   </div>
   <div class="col-md-8">
     <%= form_for @bookmark do |f| %>
     <div class="form-group">
       <%= f.label :title %>
       <%= f.text_field :title, class: 'form-control', placeholder: "Enter bookmark description" %>
     </div>
     <div class="form-group">
       <%= f.label :body %>
       <%= f.text_area :body, rows: 2, class: 'form-control', placeholder: "Enter bookmark URL" %>
     </div>
     <div class="form-group">
       <%= f.label :hashtag %>
       <%= f.text_area :hashtag, rows: 1, class: 'form-control', placeholder: "Enter post body" %>
     </div>
     <div class="form-group">
       <%= f.submit "Save", class: 'btn btn-success' %>
     </div>
     <% end %>
   </div>
 </div>


